<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Profnotes" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>



    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/yellow</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Profnotes</item>
    </style>

    <style name="CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_gray_transparent</item>
        <item name="android:width">62dp</item>
        <item name="android:height">40dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceIndicator</item>
    </style>

    <style name="ShapeAppearanceIndicator" parent="ShapeAppearance.M3.Comp.NavigationBar.ActiveIndicator.Shape">
        <item name="cornerSize">33dp</item>
    </style>

    <style name="FirstLineTextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray_transparent</item>
    </style>

    <style name="SecondLineTextStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>